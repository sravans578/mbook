<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sra1.mbook.MainActivity"
>


    <TextView
        android:id="@+id/Light_text_view"
        android:text="MedBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Colour_text_view"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Light_text_view"
        android:textSize="35sp" />

    <MedicineName
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:textSize="25sp"
        android:id="@+id/searchView"
        android:layout_below="@+id/Colour_text_view"
        android:layout_toEndOf="@+id/Colour_text_view" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="  OK"
        android:textSize="25sp"
        android:id="@+id/button"
        android:layout_alignTop="@+id/searchView"
        android:layout_toEndOf="@+id/searchView" />

    <Button
        android:id="@+id/Blue_text_view"
        android:text="  LogIn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30sp"
        android:onClick="selfDestruct"
        android:layout_below="@+id/searchView"
        android:layout_marginTop="46dp"
        android:layout_alignEnd="@+id/Light_text_view"
        android:layout_toEndOf="@+id/Colour_text_view" />

    <Button
        android:id="@+id/Green_text_view"
        android:text=" SignUp"
        android:layout_width="120dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:onClick="selfDestruct"
        android:layout_below="@+id/Blue_text_view"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Red_text_view" />

    <Button
        android:id="@+id/Red_text_view"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:text="Reminder"
        android:onClick="selfDestruct"
        android:layout_below="@+id/Green_text_view"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/button"
        android:layout_toEndOf="@+id/Colour_text_view" />
</RelativeLayout>